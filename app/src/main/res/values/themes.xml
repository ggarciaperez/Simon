<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Simon" parent="Theme.MaterialComponents">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/teal_200</item>
        <item name="colorPrimaryDark">@color/teal_700</item>
        <item name="colorAccent">@color/purple_500</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Button.Green" parent="Theme.MaterialComponents">
        <item name="colorPrimary">@color/green</item>
        <item name="android:shadowColor">@color/lightGreen</item>
    </style>
    <style name="Button.Red" parent="Theme.MaterialComponents">
        <item name="colorPrimary">@color/red</item>
        <item name="android:shadowColor">@color/orange</item>
    </style>
    <style name="Button.Yellow" parent="Theme.MaterialComponents">
        <item name="colorPrimary">@color/yellow</item>
        <item name="android:shadowColor">@color/lightYellow</item>
    </style>
    <style name="Button.Blue" parent="Theme.MaterialComponents">
        <item name="colorPrimary">@color/blue</item>
        <item name="android:shadowColor">@color/ligthBlue</item>
        <item name="android:colorActivatedHighlight">@color/ligthBlue</item>
    </style>
</resources>